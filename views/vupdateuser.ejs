                            <% } %>
                        </ul>
                        <div style="font-weight: bold;margin-right: 5px;"><%= session.user %> |
                        </div>                    
                        <form class="d-flex" method="get" action="/logout">
                            <button class="btn btn-outline-dark" type="submit">
                                <strong>Sign out</strong>   
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
        <!-- Header-->
        <header class="bg-dark py-1">
            <div class="container px-4 px-lg-5 my-3">
                <div class="text-center text-white">
                    <h1 class="display-6 fw-bolder" style="text-align: left;">Update User</h1>
                </div>
            </div>
        </header>
        <!-- Section-->
        <section class="py-5">
            <div class="container col-md-6">
                <form method="POST" action="/updateuser/<%= data.id %>/resource?_method=PATCH">
                    <div class="form">
                    <div class="label col-md-6">
                        <label for="">username</label>
                    </div>
                    <input type="text" class="form-control" id="username" name="username" value="<%= data.username %>">
                    </div>
                    <div class="form">
                    <div class="label col-md-6">
                        <label for="">password</label>
                    </div>
                    <input type="password" class="form-control" id="password" name="password" >
                    </div>
                    <div class="form">
                    <div class="label col-md-6">
                        <label for="">role</label>  
                    </div>
                    <select class="form-control" id="role" name="role" value="<%= data.role %>">
                        <option value="admin">admin</option>
                        <option value="public">public</option>
                    </select>
                    </div>
                    <button class="btn btn-sm btn-success mt-3" type="submit">Update</button>
                </form>
            </div>
        </section>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p></div>
        </footer>
        <script>
          var myArray =[
        {
            "id": 1,
            "username": "admin",
            "password": "admin",
            "role": "admin",
            "createdAt": "2023-07-20T17:31:28.069Z",
